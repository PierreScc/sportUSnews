<div class="container mt-4">
  <h1 class="mb-4 text-center">Articles</h1>

  <%= form_with(url: articles_path, method: "get", local: true, class: "form-inline justify-content-center mb-4") do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search], placeholder: "Rechercher des articles...", class: "form-control" %>
      <div class="input-group-append">
        <%= submit_tag "Rechercher", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
            <p class="card-text"><%= truncate(article.content, length: 100) %></p>
            <p class="text-muted">Ligue : <%= article.category ? article.category.name : article.league %></p>
            <%= link_to "Lire la suite", article_path(article), class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
