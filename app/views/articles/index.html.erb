<div class="container mt-4">
  <h1 class="mb-4 text-center">Articles</h1>

  <%= form_with(url: articles_path, method: "get", local: true, class: "form-inline justify-content-center mb-4") do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search], placeholder: "Rechercher des articles...", class: "form-control" %>
      <div class="input-group-append">
        <%= submit_tag "Rechercher", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
            <p class="card-text"><%= truncate(article.content, length: 100) %></p>
            <p class="text-muted">Ligue : <%= article.category ? article.category.name : article.league %></p>
            <%= link_to "Lire la suite", article_path(article), class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% @articles.first(3).each_with_index do |article, index| %>
      <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="<%= 'active' if index == 0 %>"></li>
    <% end %>
  </ol>
  <div class="carousel-inner">
    <% @articles.first(3).each_with_index do |article, index| %>
      <div class="carousel-item <%= 'active' if index == 0 %>">
        <img class="d-block w-100" src="<%= article.image_url.present? ? article.image_url : 'https://via.placeholder.com/800x400' %>" alt="<%= article.title %>">
        <div class="carousel-caption d-none d-md-block">
          <h5><%= link_to article.title, article_path(article) %></h5>
          <p><%= truncate(article.content, length: 100) %></p>
        </div>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container mt-4">
  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <img class="card-img-top" src="https://via.placeholder.com/300x200" alt="Image d'article">
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
            <p class="card-text"><%= truncate(article.content, length: 100) %></p>
            <%= link_to "Lire la suite", article_path(article), class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
